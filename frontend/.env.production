# Configuración de producción para Frontend v6.0.0

# URL del API backend
VITE_API_URL=https://cuotas.lemacdatalab.cl

# Configuración de la aplicación
VITE_APP_NAME=Sistema de Gestión Escolar
VITE_APP_VERSION=6.0.0
VITE_APP_DESCRIPTION=Sistema completo de gestión escolar con reportes avanzados

# URLs de la aplicación
VITE_APP_URL=https://tu-colegio.cl
VITE_ADMIN_URL=https://admin.tu-colegio.cl

# Configuración de autenticación
VITE_AUTH_TOKEN_KEY=auth_token_v6
VITE_AUTH_REFRESH_KEY=refresh_token_v6
VITE_SESSION_TIMEOUT=86400000

# Configuración de APIs de pago (claves públicas)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_tu_clave_publica_stripe
VITE_MERCADOPAGO_PUBLIC_KEY=tu_clave_publica_mercadopago

# Configuración de logging y debugging
VITE_ENABLE_LOGGING=false
VITE_ENABLE_DEBUG=false
VITE_LOG_LEVEL=error

# Configuración de cache
VITE_CACHE_TTL=300000
VITE_ENABLE_CACHE=true

# Configuración de notificaciones
VITE_NOTIFICATION_TIMEOUT=5000
VITE_ENABLE_NOTIFICATIONS=true

# Configuración de analytics (opcional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Configuración de mapas (si se usa)
VITE_GOOGLE_MAPS_API_KEY=

# Configuración de archivos
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Configuración de timezone
VITE_TIMEZONE=America/Santiago

# Configuración de idioma
VITE_DEFAULT_LANGUAGE=es
VITE_AVAILABLE_LANGUAGES=es,en

# Configuración de tema
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Configuración de performance
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true

# URLs de soporte
VITE_SUPPORT_EMAIL=soporte@tu-colegio.cl
VITE_SUPPORT_PHONE=+56912345678
VITE_SUPPORT_URL=https://soporte.tu-colegio.cl

# Configuración de seguridad
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true

# Configuración de reportes
VITE_ENABLE_EXPORT_PDF=true
VITE_ENABLE_EXPORT_EXCEL=true
VITE_MAX_REPORT_RECORDS=10000

# Configuración de backup
VITE_ENABLE_AUTO_SAVE=true
VITE_AUTO_SAVE_INTERVAL=30000

